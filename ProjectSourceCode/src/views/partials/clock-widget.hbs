<div class="clock-widget">
    <div class="clock">
        <div class="flip-card" id="hours">
            <div class="top"></div>
            <div class="bottom"></div>
        </div>
        <div class="flip-card" id="minutes">
            <div class="top"></div>
            <div class="bottom"></div>
        </div>
        <div class="flip-card" id="seconds">
            <div class="top"></div>
            <div class="bottom"></div>
        </div>
        <div class="am-pm" id="am-pm"></div>
    </div>
</div>

<style>
    .clock-widget {
        margin-top: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .clock {
        display: flex;
        gap: 10px;
        align-items: flex-start;
    }

    .flip-card {
        position: relative;
        width: 60px;
        height: 80px;
        perspective: 1000px;
    }

    .flip-card .top, .flip-card .bottom {
        position: absolute;
        width: 100%;
        height: 50%;
        background: #333;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 2rem;
        backface-visibility: hidden;
        border-radius: 5px;
    }

    .flip-card .top {
        top: 0;
        border-bottom: 1px solid #000;
        transform-origin: bottom;
    }

    .flip-card .bottom {
        bottom: 0;
        border-top: 1px solid #000;
        transform: rotateX(180deg);
        transform-origin: top;
    }

    .flip-card.flip .top {
        animation: flipTop 0.5s ease-in-out forwards;
    }

    .flip-card.flip .bottom {
        animation: flipBottom 0.5s ease-in-out forwards;
    }

    @keyframes flipTop {
        0% { transform: rotateX(0); }
        100% { transform: rotateX(-180deg); }
    }

    @keyframes flipBottom {
        0% { transform: rotateX(180deg); }
        100% { transform: rotateX(0); }
    }

    .flip-card.flip-back .top {
        animation: flipBackTop 0.5s ease-in-out forwards;
    }

    .flip-card.flip-back .bottom {
        animation: flipBackBottom 0.5s ease-in-out forwards;
    }

    @keyframes flipBackTop {
        0% { transform: rotateX(-180deg); }
        100% { transform: rotateX(0); }
    }

    @keyframes flipBackBottom {
        0% { transform: rotateX(0); }
        100% { transform: rotateX(180deg); }
    }

    .am-pm {
        font-size: 2rem;
        color: #333;
        margin-left: 5px;
        align-self: flex-start;
    }
</style>

<script>
    function updateClock() {
        const now = new Date();
        let hours = now.getHours();
        const minutes = String(now.getMinutes()).padStart(2, '0');
        const seconds = String(now.getSeconds()).padStart(2, '0');
        const amPm = hours >= 12 ? 'PM' : 'AM';

        hours = hours % 12;
        hours = hours ? hours : 12; // the hour '0' should be '12'
        hours = String(hours).padStart(2, '0');

        document.getElementById('hours').querySelector('.top').textContent = hours;
        document.getElementById('hours').querySelector('.bottom').textContent = hours;
        document.getElementById('minutes').querySelector('.top').textContent = minutes;
        document.getElementById('minutes').querySelector('.bottom').textContent = minutes;
        document.getElementById('seconds').querySelector('.top').textContent = seconds;
        document.getElementById('seconds').querySelector('.bottom').textContent = seconds;
        document.getElementById('am-pm').textContent = amPm;

        if (seconds === '00') {
            document.getElementById('minutes').classList.add('flip');
            setTimeout(() => {
                document.getElementById('seconds').classList.add('flip');
            }, 200);

            if (minutes === '00') {
                document.getElementById('hours').classList.add('flip');
            }

            setTimeout(() => {
                document.getElementById('minutes').classList.remove('flip');
                document.getElementById('minutes').classList.add('flip-back');
                document.getElementById('seconds').classList.remove('flip');
                document.getElementById('seconds').classList.add('flip-back');
                if (minutes === '00') {
                    document.getElementById('hours').classList.remove('flip');
                    document.getElementById('hours').classList.add('flip-back');
                }
            }, 1000);
        }
    }

    setInterval(updateClock, 1000);
    updateClock();
</script>