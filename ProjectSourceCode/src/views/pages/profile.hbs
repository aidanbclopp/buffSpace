<div class="profile-container">
    <div class="profile-content">
        <h1>{{profile.first_name}} {{profile.last_name}}'s Profile</h1>
        
        <div class="profile-header">
            <img src="{{profile.profile_picture_url}}" alt="Profile Picture" class="profile-picture">
        </div>

        <div class="profile-section">
            <h3>Bio</h3>
            <p class="bio-text">{{profile.bio}}</p>
        </div>

        <div class="profile-section">
            <h3>Details</h3>
            <ul class="profile-details">
                <li><strong>Username:</strong> <span>{{profile.username}}</span></li>
                <li><strong>Graduation Year:</strong> <span>{{profile.graduation_year}}</span></li>
                <li><strong>Major:</strong> <span>{{profile.major}}</span></li>
                <li><strong>Status:</strong> <span>{{profile.status}}</span></li>
                <li><strong>Last Updated:</strong> <span>{{profile.last_updated}}</span></li>
            </ul>
        </div>

        {{#if isOwnProfile}}
            <a href="/edit-profile" class="btn-primary">Edit Profile</a>
        {{/if}}
    </div>
</div>




<style>
/* General Body Styling */
body {
    font-family: 'Arial', sans-serif;
    background-color: #D9E3F0;
    color: #333;
