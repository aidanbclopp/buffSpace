.profile-details {
    list-style: none;
    padding: 0;
    margin: 0;
}

.profile-details li {
    padding: 12px 0;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.profile-details li:last-child {
    border-bottom: none;
}

.profile-details strong {
    color: #000000;
    min-width: 140px;
    display: inline-block;
}

.profile-details span {
    color: #666;
}

/* Button Styling */
.btn-primary {
    display: block;
    width: 100%;
    background-color: #565A5C;
