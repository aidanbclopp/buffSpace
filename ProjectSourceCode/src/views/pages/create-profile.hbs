<!-- Create Profile Page HTML -->
<div class="profile-container">
    <div class="profile-content">
        <h1>Create Your Profile</h1>
        
        <form action="/create-profile" method="POST" class="create-form">
            <div class="form-group">
                <label for="profile_picture_url">Profile Picture URL</label>
                <input type="text" id="profile_picture_url" name="profile_picture_url" 
                      class="form-control" placeholder="Enter URL for your profile picture">
                <small class="form-text">Enter a URL for your profile picture (e.g., from a photo sharing site)</small>
            </div>

            <div class="form-group">
                <label for="first_name">First Name*</label>
                <input type="text" id="first_name" name="first_name" 
                      class="form-control" required>
            </div>

            <div class="form-group">
                <label for="last_name">Last Name*</label>
                <input type="text" id="last_name" name="last_name" 
                      class="form-control" required>
            </div>

            <div class="form-group">
                <label for="bio">Bio</label>
                <textarea id="bio" name="bio" class="form-control" 
                          rows="4" placeholder="Tell us about yourself..."></textarea>
            </div>

            <div class="form-group">
                <label for="graduation_year">Graduation Year*</label>
                <input type="number" id="graduation_year" name="graduation_year" 
                      class="form-control" min="2024" max="2030" required>
            </div>

            <div class="form-group">
                <label for="major">Major*</label>
                <select id="major" name="major" class="form-control" required>
                    <option value="">Select your major</option>
                    {{#each majors as |major|}}
                        <option value="{{major.major_id}}" {{#if (eq major.major_id profile.major)}}selected{{/if}}>{{major.major_name}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="status">Status</label>
                <select id="status" name="status" class="form-control" required>
                    <option value="Active" {{#if (eq profile.status "Active")}}selected{{/if}}>Active</option>
                    <option value="Alumni" {{#if (eq profile.status "Alumni")}}selected{{/if}}>Alumni</option>
                    <option value="On Leave" {{#if (eq profile.status "On Leave")}}selected{{/if}}>On Leave</option>
                </select>
            </div>

            <button type="submit" class="btn-primary">Create Profile</button>
        </form>
    </div>
</div>

