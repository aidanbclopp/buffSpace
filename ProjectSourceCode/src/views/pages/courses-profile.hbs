<div class="profile-container">
    <div class="profile-content">
        <h1>My Courses</h1>
        
        <!-- Display Current Courses -->
        <div class="current-courses">
            <h2>Current Courses</h2>
            {{#if userCourses}}
                <ul class="course-list">
                    {{#each userCourses}}
                        <li class="course-item">
                            <span>{{this.course_id}} - {{this.course_name}}</span>
                            <form action="/remove-course" method="POST" class="remove-course-form">
                                <input type="hidden" name="course_id" value="{{this.course_id}}">
                                <button type="submit" class="btn-remove">Remove</button>
                            </form>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p>No courses added yet.</p>
            {{/if}}
        </div>

        <!-- Add New Courses -->
        <div class="add-courses">
            <h2>Add Courses</h2>
            <form action="/add-course" method="POST" class="add-course-form">
                <div class="form-group">
                    <select name="course_id" class="form-control" required>
                        <option value="">Select a course</option>
                        {{#each availableCourses}}
                            <option value="{{this.course_id}}">{{this.course_id}} - {{this.course_name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn-primary">Add Course</button>
            </form>
        </div>
    </div>
</div>

