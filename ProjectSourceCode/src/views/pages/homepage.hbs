<div class="homepage-container">
    <h1>Welcome, {{user.name}}!</h1>

    <div class="post-widget">
        <h2>Add a Post</h2>
        <form action="/posts" method="POST" class="post-form">
            <div class="form-group">
                <textarea name="content" class="form-control" placeholder="What's on your mind?" required></textarea>
            </div>
            <button type="submit" class="btn-primary">Post</button>
        </form>
    </div>

    <div class="recent-posts">
        <h2>Recent Posts</h2>
        <div class="posts-list">
            {{#each posts}}
                <div class="post">
                    <img src="{{this.user.avatar_url}}" alt="{{this.user.name}}'s avatar" class="avatar">
                    <div class="post-header">
                        <h3>{{this.user.name}}</h3>
                        <span class="post-date">{{this.created_at}}</span>
                    </div>
                    <div class="post-content">
                        <p>{{this.content}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

