<div class="homepage-container">
    <div class="main-content">
        <div class="content-left">
            <div class="sidebar-element">{{> profile-widget user=user}}</div>
            <div class="sidebar-element">{{> buffcircle-widget friends=topFriends}}</div>
        </div>
        <div class="content-right">
            <div class="post-widget">
                <form action="/posts" method="POST" class="post-form">
                    <div class="form-group">
                        <textarea name="content" class="form-control" placeholder="What's on your mind?" required></textarea>
                    </div>
                    <div class="form-actions">
                        <div class="icon-buttons">
                            <button type="button" class="icon-btn">
                                <i class="bi bi-camera-fill" style="font-size: 32px"></i>
                            </button>
                            <button type="button" class="icon-btn">
                                <i class="bi bi-music-note-list" style="font-size: 32px"></i>
                            </button>
                        </div>
                        <button type="submit" class="btn-primary">Share</button>
                    </div>
                </form>
            </div>

            <div class="customize-links">
                <div class="filter-links">
                    <span>Show me:</span>
                    <a href="#" class="filter-link">All Friends</a> |
                    <a href="#" class="filter-link">Just Me</a> |
                    <a href="#" class="filter-link">BuffSpace</a>
                </div>
                <div class="sort-links">
                    <span>Sort by:</span>
                    <a href="#" class="sort-link">Date</a> |
                    <a href="#" class="sort-link">Random</a>
                </div>
            </div>

            <div style="margin-top: 30px;">
                <div class="posts-list">
                    {{#each posts}}
                        <div class="post">
                            <div class="post-header">
                                <img src="{{this.user.avatar_url}}" alt="{{this.user.name}}'s avatar" class="avatar" onerror="this.onerror=null;this.src='https://e7.pngegg.com/pngimages/926/34/png-clipart-computer-icons-user-profile-avatar-avatar-face-heroes.png';">
                                <div class="post-details">
                                    <h3>{{this.user.name}}</h3>
                                </div>
                            </div>
                            <div class="post-content">
                                <p>{{this.content}}</p>
                            </div>
                            <div class="post-meta">
                                <span>Posted at {{this.created_at}}</span>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

